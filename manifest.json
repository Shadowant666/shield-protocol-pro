{
  "manifest_version": 3,
  "name": "Shield Protocol Pro",
  "version": "1.2",
  "description": "Antivirus for Web3: Preview transaction outcomes before you sign.",
  "permissions": [
    "storage", 
    "activeTab"
  ],
  "host_permissions": [
  "https://shield-protocol-7s6jrb0nh-akbouret-3815s-projects.vercel.app/*",
  "https://www.paypal.com/*",
  "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["<all_urls>"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["engine.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' https://www.paypal.com; object-src 'self'"
  }
}